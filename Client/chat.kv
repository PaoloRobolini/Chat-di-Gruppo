<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 60
        spacing: 25

        Label:
            text: "Benvenuto in Biscord!"
            font_size: 36
            bold: True
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 60

        TextInput:
            id: mail
            hint_text: "Inserisci il tuo indirizzo mail"
            font_size: 20
            background_normal: ''
            background_color: 0.2, 0.2, 0.3, 1
            foreground_color: 1, 1, 1, 1
            padding: 15

        TextInput:
            id: password
            hint_text: "Inserisci la password"
            font_size: 20
            password: True
            background_normal: ''
            background_color: 0.2, 0.2, 0.3, 1
            foreground_color: 1, 1, 1, 1
            padding: 15

        Label:
            id: login_data_error
            text: ""
            font_size: 18
            color: 1, 0.3, 0.3, 1

        Button:
            text: "Accedi"
            font_size: 20
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0.1, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_release: root.login()

        Button:
            text: "Non hai un account? Registrati!"
            font_size: 18
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 0.6, 0.8, 1, 1
            on_release: app.root.current = "signin"


