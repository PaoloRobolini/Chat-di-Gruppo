<ChatScreen>:
    canvas.before:
        Color:
            rgba: 0.08, 0.08, 0.12, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size_hint: 1, 1

        # Sezione chiamata in arrivo
        BoxLayout:
            opacity: 0
            disabled: True
            id: incoming_call_box
            orientation: 'horizontal'
            size_hint: None, None
            size: 250, 50
            pos_hint: {'right': 0.85, 'top': 0.98}
            spacing: 5
            padding: 5
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                id: caller_name
                text: ""
                font_size: 16
                color: 1, 1, 1, 1
                size_hint_x: 0.5

            Button:
                id: accept_call
                text: "✓"
                font_size: 20
                size_hint_x: None
                width: 40
                height: 40
                background_normal: ''
                background_color: 0, 0.8, 0, 1
                color: 1, 1, 1, 1
                on_release: root.accetta_chiamata()

            Button:
                id: reject_call
                text: "✗"
                font_size: 20
                size_hint_x: None
                width: 40
                height: 40
                background_normal: ''
                background_color: 0.8, 0, 0, 1
                color: 1, 1, 1, 1
                on_release: root.rifiuta_chiamata()
        # Pulsante telefono
        Button:
            id: call_button
            size_hint: None, None
            size: 50, 50
            pos_hint: {'right': 0.98, 'top': 0.98}
            background_normal: ''
            background_color: 0.1, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_release: root.start_call()

            Image:
                source: 'phone_icon.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: None, None
                size: 30, 30

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1

            # MENU LATERALE
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: 80
                spacing: 10
                padding: 10

                canvas.before:
                    Color:
                        rgba: 0.15, 0.15, 0.2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Button:
                    size_hint: None, None
                    size: 60, 60
                    text: "+"
                    font_size: 24
                    background_normal: ''
                    background_color: 0.1, 0.6, 1, 1
                    color: 1, 1, 1, 1
                    on_release: root.aggiungicontatto()

                ScrollView:
                    do_scroll_y: True
                    bar_width: 5

                    GridLayout:
                        id: contact_list_sidebar
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
                        padding: 5

            # CHAT PRINCIPALE
            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 10

                Label:
                    id: contatto_selezionato
                    text: root.selected_contact
                    font_size: 24
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: 40

                # AI Status Label
                Label:
                    id: ai_status
                    text: ""
                    font_size: 16
                    color: 0.5, 0.8, 1, 1 # Light blue color
                    size_hint_y: None
                    height: 20
                    opacity: 0 # Initially hidden

                ScrollView:
                    size_hint_y: 0.8
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 5

                    # Sostituita la Label con un BoxLayout per i bottoni dei messaggi
                    BoxLayout:
                        id: chat_history_container # Nuovo ID per il contenitore dei messaggi
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 5 # Spazio tra i bottoni dei messaggi
                        padding: 10 # Padding interno al contenitore

                BoxLayout:
                    size_hint_y: None
                    height: 50
                    spacing: 10

                    TextInput:
                        id: message_input
                        hint_text: "Scrivi un messaggio..."
                        multiline: False
                        background_normal: ''
                        background_color: 0.2, 0.2, 0.3, 1
                        foreground_color: 1, 1, 1, 1
                        padding: 10

                    Button:
                        text: "Invia"
                        background_normal: ''
                        background_color: 0.1, 0.6, 1, 1
                        color: 1, 1, 1, 1
                        on_release: root.send_message()

                    Button:
                        text: "scegli un file"
                        background_normal: ''
                        background_color: 0.1, 0.6, 1, 1
                        color: 1, 1, 1, 1
                        on_release: root.send_file(self)




<AggiungiContatto>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 60
        spacing: 25

        # Pulsante INDIETRO in alto a destra
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40

            Widget:

            Button:
                text: "← Indietro"
                size_hint: None, None
                size: 120, 40
                font_size: 16
                background_normal: ''
                background_color: 0.1, 0.6, 1, 1
                color: 1, 1, 1, 1
                on_release: app.root.current = "chat"

        Label:
            text: "Aggiungi un contatto o unisciti a un gruppo"
            font_size: 30
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 60

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            ToggleButton:
                text: "Nuovo contatto"
                group: "radio_group"
                height: 40
                font_size: 20
                background_normal: ''
                background_color: 0.2, 0.4, 0.8, 1
                color: 1, 1, 1, 1
                on_state: root.on_radio_select(self, self.text)

            ToggleButton:
                text: "Nuovo gruppo"
                group: "radio_group"
                height: 40
                font_size: 20
                background_normal: ''
                background_color: 0.2, 0.4, 0.8, 1
                color: 1, 1, 1, 1
                on_state: root.on_radio_select(self, self.text)

        TextInput:
            id: contatto
            hint_text: "Inserisci il contatto da aggiungere"
            font_size: 20
            background_normal: ''
            background_color: 0.2, 0.2, 0.3, 1
            foreground_color: 1, 1, 1, 1
            padding: 15

        Label:
            id: login_data_error
            text: ""
            font_size: 18
            color: 1, 0.3, 0.3, 1

        Button:
            text: "Aggiungi"
            font_size: 20
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0.1, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_release: root.aggiungicontatto()
